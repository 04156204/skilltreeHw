@model List<sTreeHw0706.Models.ViewModels.MoneyViewModel>
<div>
    <dl class="dl-horizontal">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-hover">
                    <tr>
                        <th>流水號</th>
                        <th>類別</th>
                        <th>日期</th>
                        <th>金額</th>
                    </tr>
                   
                    @foreach (var details in Model)
                    {
                    <tr>
                        <td>
                            @details.No
                        </td>
                        <td>
                            @details.Type
                        </td>
                        <td>
                            @(details.Datetime.Value.ToString("yyyy-MM-dd"))
                        </td>
                        <td>
                            @details.Amount.ToString("N0")
                        </td>
                    </tr>

                    }
                </table>
            </div>
        </div>
    </dl>
</div>